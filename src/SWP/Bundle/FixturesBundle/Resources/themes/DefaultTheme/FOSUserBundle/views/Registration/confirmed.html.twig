{% extends "base.html.twig" %}

{% trans_default_domain 'SWPUserBundle' %}

{% block body %}
<div id="page" class="container">

  <!-- Content -->
  <section id="content">

{% block swp_user_content %}
    <p>{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</p>
    {% if targetUrl %}
    <p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>
    {% endif %}
{% endblock swp_user_content %}

  </section><!-- End Content -->

</div>
{% endblock %}
