<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="swp_user.resetting.form.factory" class="SWP\Bundle\UserBundle\Form\Factory\FormFactory">
            <argument type="service" id="form.factory" />
            <argument>%swp_user.resetting.form.name%</argument>
            <argument>%swp_user.resetting.form.type%</argument>
            <argument>%swp_user.resetting.form.validation_groups%</argument>
        </service>

        <service id="swp_user.resetting.form.type" class="SWP\Bundle\UserBundle\Form\Type\ResettingFormType">
            <tag name="form.type" alias="swp_user_resetting" />
            <argument>%swp.model.user.class%</argument>
        </service>

        <service id="swp_user.listener.resetting" class="SWP\Bundle\UserBundle\EventListener\ResettingListener">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="router" />
            <argument>%swp_user.resetting.token_ttl%</argument>
        </service>

        <service id="swp_user.resetting.controller" class="SWP\Bundle\UserBundle\Controller\ResettingController" public="true">
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="swp_user.resetting.form.factory" />
            <argument type="service" id="SWP\Bundle\UserBundle\Doctrine\UserManager" />
            <argument type="service" id="SWP\Bundle\UserBundle\Util\TokenGeneratorInterface" />
            <argument type="service" id="SWP\Bundle\UserBundle\Mailer\MailerInterface" />
            <argument>%swp_user.resetting.retry_ttl%</argument>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="SWP\Bundle\UserBundle\Controller\ResettingController" alias="swp_user.resetting.controller" public="true" />
    </services>

</container>