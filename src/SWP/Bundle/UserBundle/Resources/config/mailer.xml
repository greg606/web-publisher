<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="swp_user.resetting.email.template">@SWPUser/Resetting/email.txt.twig</parameter>
        <parameter key="swp_user.registration.confirmation.template">@SWPUser/Registration/email.txt.twig</parameter>
        <parameter key="swp_user.registration.confirmation.from_email" type="collection">
            <parameter key="contact@publisher.test">Publisher</parameter>
        </parameter>
        <parameter key="swp_user.resetting.email.from_email" type="collection">
            <parameter key="contact@publisher.test">Publisher</parameter>
        </parameter>
    </parameters>

    <services>
        <service id="swp_user.mailer.default" class="SWP\Bundle\UserBundle\Mailer\BaseMailer" public="false">
            <argument type="service" id="mailer" />
            <argument type="service" id="router" />
            <argument type="service" id="twig" />
            <argument type="collection">
                <argument key="confirmation.template">%swp_user.registration.confirmation.template%</argument>
                <argument key="resetting.template">%swp_user.resetting.email.template%</argument>
                <argument key="from_email" type="collection">
                    <argument key="confirmation">%swp_user.registration.confirmation.from_email%</argument>
                    <argument key="resetting">%swp_user.resetting.email.from_email%</argument>
                </argument>
            </argument>
            <tag name="swp_user.requires_swift" />
        </service>

        <service id="swp_user.mailer.twig_swift" class="SWP\Bundle\UserBundle\Mailer\TwigSwiftMailer" public="false">
            <argument type="service" id="mailer" />
            <argument type="service" id="router" />
            <argument type="service" id="twig" />
            <argument type="collection">
                <argument key="template" type="collection">
                    <argument key="confirmation">%swp_user.registration.confirmation.template%</argument>
                    <argument key="resetting">%swp_user.resetting.email.template%</argument>
                </argument>
                <argument key="from_email" type="collection">
                    <argument key="confirmation">%swp_user.registration.confirmation.from_email%</argument>
                    <argument key="resetting">%swp_user.resetting.email.from_email%</argument>
                </argument>
            </argument>
            <tag name="swp_user.requires_swift" />
        </service>

        <service id="swp_user.mailer.noop" class="SWP\Bundle\UserBundle\Mailer\NoopMailer" public="false" />
    </services>

</container>
